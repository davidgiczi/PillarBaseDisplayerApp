<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PillarDataFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_set_pillar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="@string/set_place_of_pillar"
            android:textColor="@color/base_text"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/input_pillar_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/set_id_of_pillar"
            android:inputType="text"
            android:textSize="16sp"
            android:minHeight="48dp"
            android:textColor="@color/base_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_set_pillar" />

        <EditText
            android:id="@+id/input_y_coordinate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/y_coordinate"
            android:inputType="numberDecimal"
            android:textSize="16sp"
            android:maxLength="10"
            android:minHeight="48dp"
            android:textColor="@color/base_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/input_pillar_id" />

        <EditText
            android:id="@+id/input_x_coordinate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/x_coordinate"
            android:inputType="numberDecimal"
            android:textSize="16sp"
            android:maxLength="10"
            android:minHeight="48dp"
            android:textColor="@color/base_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/input_y_coordinate" />

        <TextView
            android:id="@+id/text_next_prev_pillar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-light"
            android:text="@string/set_next_prev_pillar"
            android:textColor="@color/base_text"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/input_x_coordinate" />

        <EditText
            android:id="@+id/input_next_prev_pillar_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/set_id_of_pillar"
            android:inputType="text"
            android:textSize="16sp"
            android:minHeight="48dp"
            android:textColor="@color/base_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_next_prev_pillar" />

        <EditText
            android:id="@+id/input_next_prev_y_coordinate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/y_coordinate"
            android:inputType="numberDecimal"
            android:textSize="16sp"
            android:maxLength="10"
            android:minHeight="48dp"
            android:textColor="@color/base_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/input_next_prev_pillar_id" />

        <EditText
            android:id="@+id/input_next_prev_x_coordinate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/x_coordinate"
            android:inputType="numberDecimal"
            android:textSize="16sp"
            android:maxLength="10"
            android:minHeight="48dp"
            android:textColor="@color/base_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/input_next_prev_y_coordinate" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>